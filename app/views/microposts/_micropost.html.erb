<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.gravatar_small_size), micropost.user %>
  <big><span class="user"><%= link_to micropost.user.name, micropost.user %></span></big>
  <span class="content"><%= link_to micropost.title, micropost %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user? micropost.user %>
      <%= link_to "delete", micropost, method: :delete, data: {confirm: "You sure?"} %>
    <% end %>
  </span>
</li>
