<%= form_for(@micropost) do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_field :title, placeholder: t("enter_title"), class: "form-control" %>
    <%= f.text_area :content, placeholder: t("compose_new_micropost"), class: "form-control" %>
  </div>
  <%= f.submit t("post"), class: "btn btn-primary" %>
<% end %>
